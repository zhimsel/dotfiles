[user]
  email = zach@himsel.net
  name = Zach Himsel
[github]
  user = zhimsel
[core]
  eol = lf
  autocrlf = input
  safecrlf = false
  editor = vim
  excludesfile = ~/.gitignore_global
  commentchar = "%"
[merge]
  tool = vimdiff
[push]
  default = tracking
[pager]
  last = cat
[grep]
  linenumber = true
[tig]
  line-graphics = utf-8
  mouse = true
  main-view-id = true
[alias]
  unstage = reset HEAD --
  last = log -1 HEAD
  s = status
  f = fetch -p
  c = commit -v
  a = add
  ck = checkout
  co = checkout
  br = branch
  undo-last-commit = reset --soft HEAD~1
  subf = submodule foreach 'git checkout master && echo "" && git pull'
  sub = submodule
  db = "!sh -c \"git diff $(git merge-base master HEAD) HEAD\"" # diff between HEAD and branch-off commit
  dm = "!sh -c \"git diff $(git merge-base master HEAD) master\"" #diff between HEAD and master
  lr = log --graph --decorate --abbrev-commit --pretty=format:\"%C(auto)%h %Cblue%an %Creset%C(auto)%s%d\" HEAD~1..origin # unpulled commits on remote
  ll = log --graph --decorate --pretty=medium --all #better longer log
  l = log --graph --decorate --abbrev-commit --all --pretty=format:\"%C(auto)%h %Creset%ai %Cblue%an %Creset%C(auto)%s%d\" # better log
  d = diff
  dc = diff --cached
  wt = worktree
  wtp = worktree prune -v
  wtl = worktree list
  st = stash
  pr = "!sh -c \"hub pull-request\""
