[user]
  email = zach@himsel.net
  name = Zach Himsel
[core]
  eol = lf
  autocrlf = input
  safecrlf = false
  editor = vim
  excludesfile = ~/.gitignore_global
[merge]
  tool = vimdiff
[push]
  default = tracking
[alias]
  unstage = reset HEAD --
  last = log -1 HEAD
  s = status
  f = fetch
  c = commit
  l = log
  a = add
  ck = checkout
  co = checkout
  br = branch
  undo-last-commit = reset --soft HEAD~1
  update-submodules = submodule foreach 'git checkout master && echo "" && git pull'
  p = push
  sub = submodule
  branchdiff = "!sh -c \"git diff $(git merge-base master HEAD) HEAD\""
  ll = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lll = log --graph --decorate --pretty=medium --all
[pager]
  last = cat
